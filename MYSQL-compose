# Example: How to set up MySQL using Docker Compose
# This file demonstrates a basic MySQL container configuration.
# Replace values in the .env file with your actual settings before running.


mysql:
    container_name: name_mysql
    image: mysql:8.0
    ports:
      - "${MYSQLPORT}:3306"
    environment:
      MYSQL_DATABASE: ${DBNAME}
      MYSQL_USER: ${DBUSER}
      MYSQL_PASSWORD: ${DBPASS}
      MYSQL_ROOT_PASSWORD: ${DBPASS}
      MYSQL_ROOT_HOST: '%'
      MYSQL_AUTHENTICATION_PLUGIN: random_password
    volumes:
      - ./docker/my.cnf:/etc/my.cnf
      - app-data:/var/lib/mysql
